{
  "$schema": "docx-style-config-v1",
  "metadata": {
    "name": "40hero",
    "description": "4.0 Hero Industrial Automation branding"
  },
  "page": {
    "size": "letter",
    "margins": {
      "top": "0.75in",
      "bottom": "1in",
      "left": "0.75in",
      "right": "0.75in"
    }
  },
  "colors": {
    "primary": "#1E3A5F",
    "accent": "#2E5A8F",
    "light": "#E8F0F8",
    "text": "#333333",
    "muted": "#4A4A4A",
    "success": "#2E7D32",
    "warning": "#E65100",
    "danger": "#C0392B",
    "border": "#D0D0D0"
  },
  "fonts": {
    "heading": { "name": "Arial", "bold": true },
    "body": { "name": "Arial", "size": 11 },
    "mono": { "name": "Courier New", "size": 9 }
  },
  "styles": {
    "title": {
      "font": { "name": "Arial", "size": 14, "bold": true, "color": "primary" },
      "alignment": "left",
      "spacing": { "before": 20, "after": 10 }
    },
    "subtitle": {
      "font": { "name": "Arial", "size": 12, "bold": true, "color": "primary" },
      "alignment": "left",
      "spacing": { "after": 10 }
    },
    "heading1": {
      "font": { "name": "Arial", "size": 14, "bold": true, "color": "primary" },
      "spacing": { "before": 20, "after": 10 }
    },
    "heading2": {
      "font": { "name": "Arial", "size": 12, "bold": true, "color": "primary" },
      "spacing": { "before": 15, "after": 10 }
    },
    "heading3": {
      "font": { "name": "Arial", "size": 10, "bold": true, "color": "accent" },
      "spacing": { "before": 10, "after": 6 }
    },
    "body": {
      "font": { "name": "Arial", "size": 11, "color": "text" },
      "spacing": { "after": 6 }
    },
    "bullet": {
      "font": { "name": "Arial", "size": 11, "color": "text" },
      "spacing": { "after": 4 }
    }
  },
  "tables": {
    "default": {
      "headerRow": {
        "background": "primary",
        "font": { "color": "#FFFFFF", "bold": true, "size": 10 }
      },
      "bodyRow": {
        "font": { "size": 10 }
      }
    }
  },
  "lists": {
    "bullet": { "symbol": "•", "color": "text" },
    "check": { "symbol": "✓", "color": "success" },
    "cross": { "symbol": "✗", "color": "danger" },
    "dash": { "symbol": "—", "color": "text" }
  },
  "contact": {
    "company": "4.0 Hero",
    "tagline": "Industrial Automation Services",
    "email": "trent@40hero.com"
  }
}
