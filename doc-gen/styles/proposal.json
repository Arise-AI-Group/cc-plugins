{
  "$schema": "docx-style-config-v1",
  "metadata": {
    "name": "Proposal",
    "description": "Professional proposal/quote styling with highlight accents"
  },
  "page": {
    "size": "letter",
    "margins": {
      "top": "0.75in",
      "bottom": "1in",
      "left": "0.75in",
      "right": "0.75in"
    }
  },
  "colors": {
    "primary": "#1E3A5F",
    "secondary": "#2E5A8F",
    "accent": "#E07A38",
    "text": "#333333",
    "muted": "#666666",
    "light": "#E8F0F8",
    "success": "#1E3A5F",
    "warning": "#E65100",
    "danger": "#C0392B",
    "border": "#D0D0D0"
  },
  "fonts": {
    "heading": { "name": "Arial", "bold": true },
    "body": { "name": "Arial", "size": 10.5 },
    "mono": { "name": "Courier New", "size": 9 }
  },
  "styles": {
    "title": {
      "font": { "name": "Arial", "size": 32, "bold": true, "color": "primary" },
      "alignment": "center",
      "spacing": { "after": 0 }
    },
    "subtitle": {
      "font": { "name": "Arial", "size": 18, "bold": true, "color": "primary" },
      "alignment": "center",
      "spacing": { "after": 4 }
    },
    "heading1": {
      "font": { "name": "Arial", "size": 14, "bold": true, "color": "primary", "allCaps": true },
      "spacing": { "before": 20, "after": 12 }
    },
    "heading2": {
      "font": { "name": "Arial", "size": 11, "bold": true, "color": "primary" },
      "spacing": { "before": 14, "after": 8 }
    },
    "heading3": {
      "font": { "name": "Arial", "size": 10.5, "bold": true, "color": "accent" },
      "spacing": { "before": 12, "after": 6 }
    },
    "heading4": {
      "font": { "name": "Arial", "size": 10.5, "bold": true, "color": "text" },
      "spacing": { "before": 10, "after": 4 }
    },
    "body": {
      "font": { "name": "Arial", "size": 10.5, "color": "text" },
      "spacing": { "after": 8 }
    },
    "bullet": {
      "font": { "name": "Arial", "size": 10.5, "color": "text" },
      "spacing": { "after": 4 }
    }
  },
  "tables": {
    "default": {
      "headerRow": {
        "background": "primary",
        "font": { "color": "#FFFFFF", "bold": true, "size": 10 }
      },
      "bodyRow": {
        "font": { "size": 10 }
      }
    },
    "investment": {
      "headerRow": {
        "background": "primary",
        "font": { "color": "#FFFFFF", "bold": true, "size": 10 }
      },
      "bodyRow": {
        "font": { "size": 10 }
      },
      "totalRow": {
        "background": "light",
        "font": { "bold": true, "color": "primary" }
      }
    }
  },
  "lists": {
    "bullet": { "symbol": "•", "color": "text" },
    "check": { "symbol": "✓", "color": "primary" },
    "cross": { "symbol": "✗", "color": "danger" },
    "dash": { "symbol": "—", "color": "text" }
  },
  "contact": {}
}
