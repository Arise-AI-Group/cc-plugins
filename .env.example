# Slack (slack, client-onboarding)
# -----------------------------------------------------------------------------
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_USER_TOKEN=xoxp-your-user-token

# -----------------------------------------------------------------------------
# Notion (notion)
# -----------------------------------------------------------------------------
NOTION_API_KEY=secret_...

# -----------------------------------------------------------------------------
# n8n (n8n)
# -----------------------------------------------------------------------------
N8N_API_URL=https://n8n.example.com
N8N_API_KEY=

